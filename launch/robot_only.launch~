<?xml version="1.0"?>
<launch>
  <arg name="limited" default="true"/>

  <!-- send robot urdf to param server -->
  <include file="$(find ur5_barrett_bringup)/launch/ur5_barrett_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot  -z 0.375 -Y 3.14" respawn="false" output="screen" />

  <include file="$(find ur5_barrett_bringup)/launch/controller.launch"/>
   

  <rosparam file="$(find ur5_barrett_bringup)/controller/arm_controller.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="spawner" args="arm_controller" />

  <rosparam file="$(find ur5_barrett_bringup)/controller/bh280_controller.yaml" command="load"/>
  <node name="hand_controller_spawner" pkg="controller_manager" type="spawner" args="hand_controller" />


  <!-- Stow the arm -->
  <node name="stow_ur5_new" pkg="ur5_barrett_bringup" type="stow_ur5_new" />

  <!-- test the hand -->
  <node name="simple_trajectory_bhand" pkg="ur5_barrett_bringup" type="simple_trajectory_bhand" />
  


</launch>
